extends layout

block content
  h1 These are companies
  
  for company in (companies ? companies : [])
    li(company_id=company.company_id) #{company.company_name} / #{company.ticker_symbol} / #{company.company_category} 
        a(href='update?company_id='+company.company_id) Update
        a(href='delete?company_id='+company.company_id) Delete
  a(href='create') Add company
