extends layout

block content
  h1 These are companies
  
  for company in (companies ? companies : [])
    li(company_id=company.company_id) #{company.company_name} / #{company.company_category} /
        a(href='https://finance.google.com/finance?q='+company.ticker_symbol) #{company.ticker_symbol}
        a(href='update?company_id='+company.company_id) Update
        a(href='delete?company_id='+company.company_id) Delete
  a(href='create') Add company
